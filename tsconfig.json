{
  "compilerOptions": {
    "lib": ["es6"],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".vscode/**/*"
  ]
}